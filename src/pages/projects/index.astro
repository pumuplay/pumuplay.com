---
import { getCollection } from 'astro:content';
import ContentListPage from '../../components/ContentListPage.astro';

const posts = (await getCollection('project')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<ContentListPage
    title="Our Projects"
    subtitle="Showcase of our recent work and case studies."
    basePath="/projects/"
    items={posts}
/>
