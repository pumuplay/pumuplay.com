---
import { getCollection } from 'astro:content';
import ContentListPage from '../../components/ContentListPage.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<ContentListPage
    title="Our Blog"
    subtitle="Latest updates, thoughts, and insights from our team."
    basePath="/blogs/"
    items={posts}
/>
