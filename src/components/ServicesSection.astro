---
import { ArrowUpRight } from "lucide-react";
import FadeIn from "./ui/FadeIn";
import HoverBounce from "./ui/HoverBounce";
import { Image } from "astro:assets";
import agentic from "../assets/services/agentic.svg";
import automation from "../assets/services/automation.svg";
import saas from "../assets/services/saas.svg";
---

<section
  id="services-section"
  class="max-w-7xl mx-auto px-6 py-20 bg-white rounded-[3rem] my-12 relative overflow-hidden"
>
  <FadeIn client:visible>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
      <h2 class="text-3xl md:text-5xl font-semibold leading-tight">
        We Tried To Provide You <br />
        With All Modern <br />
        Solutions
      </h2>

      <div class="flex flex-col items-start justify-center space-y-6">
        <p class="text-gray-500 text-sm md:text-base max-w-md">
          Elevate your business with cost-effective and powerful solutions that
          reduce operational costs while boosting productivity through
          intelligent technology designed for your success.
        </p>
        <HoverBounce client:visible>
            <a
              href="/projects"
              target="_blank"
              class="px-6 py-3 bg-black text-white rounded-full text-sm font-semibold flex items-center gap-2 hover:bg-gray-800 transition-colors"
            >
              Explore More
              <ArrowUpRight size={16} />
            </a>
        </HoverBounce>
      </div>
    </div>
  </FadeIn>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {/* Service 1 */}
    <FadeIn delay={0.2} client:visible>
      <div
        class="p-6 bg-gray-50 rounded-2xl text-center hover:bg-white hover:shadow-lg transition-all duration-300 h-full"
      >
        <HoverBounce client:visible>
          <div
            class="w-16 h-16 mx-auto mb-4 bg-gray-200 rounded-full flex items-center justify-center"
          >
            <Image src={automation} alt="Automation Workflows" />
          </div>
        </HoverBounce>
        <h3 class="font-semibold text-sm">
          Automation Workflows<br /> let AI handle the boring stuff.
        </h3>
      </div>
    </FadeIn>

    {/* Service 2 */}
    <FadeIn delay={0.4} client:visible>
      <div
        class="p-6 bg-gray-50 rounded-2xl text-center hover:bg-white hover:shadow-lg transition-all duration-300 h-full"
      >
        <HoverBounce client:visible>
          <div
            class="w-16 h-16 mx-auto mb-4 bg-gray-200 rounded-full flex items-center justify-center"
          >
            <Image src={saas} alt="Micro SaaS" />
          </div>
        </HoverBounce>
        <h3 class="font-semibold text-sm">
          Micro SaaS <br /> pay less, more effective.
        </h3>
      </div>
    </FadeIn>

    {/* Service 3 */}
    <FadeIn delay={0.6} client:visible>
      <div
        class="p-6 bg-gray-50 rounded-2xl text-center hover:bg-white hover:shadow-lg transition-all duration-300 h-full"
      >
        <HoverBounce client:visible>
          <div
            class="w-16 h-16 mx-auto mb-4 bg-gray-200 rounded-full flex items-center justify-center"
          >
            <Image src={agentic} alt="Agentic AI" />
          </div>
        </HoverBounce>
        <h3 class="font-semibold text-sm">
          Agentic AI <br /> your modern secretary.
        </h3>
      </div>
    </FadeIn>
  </div>
</section>
