---
import '../styles/global.css';
import GlobalDevTools from '../components/react-query/GlobalDevTools';

interface Props {
	title: string;
    description?: string;
}

const { title = "PumuPlay", description = "A Modern Future of SMEs." } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		{/* Google Analytics - Only active in production */}
		{
			import.meta.env.PROD && (
				<>
					<script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${import.meta.env.PUBLIC_GOOGLE_ANALYTICS_ID}`}></script>
					<script is:inline define:vars={{ googleAnalyticsId: import.meta.env.PUBLIC_GOOGLE_ANALYTICS_ID }}>
						window.dataLayer = window.dataLayer || [];
						function gtag(){dataLayer.push(arguments);}
						gtag('js', new Date());
						gtag('config', googleAnalyticsId);
					</script>
				</>
			)
		}
	</head>
	<body class="bg-[#f2f2f5] text-gray-900 selection:bg-primary selection:text-black">
		<slot />
		{ import.meta.env.DEV && <GlobalDevTools client:idle /> }
	</body>
</html>
