---
import '../styles/global.css';

interface Props {
	title: string;
    description?: string;
}

const { title = "PumuPlay", description = "A Modern Future of SMEs." } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-[#f2f2f5] text-gray-900 selection:bg-primary selection:text-black">
		<slot />
	</body>
</html>
